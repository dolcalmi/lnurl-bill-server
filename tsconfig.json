{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config/index"],
      "@app/*": ["src/app/*"],
      "@app": ["src/app/index"],
      "@domain/*": ["src/domain/*"],
      "@services/*": ["src/services/*"],
      "@servers/*": ["src/servers/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false
  }
}
